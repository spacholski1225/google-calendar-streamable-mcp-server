{
  "name": "google-calendar-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Google Calendar - list, search, create, update, delete events with OAuth 2.1",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "dev:worker": "wrangler dev",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "deploy": "wrangler deploy",
    "deploy:tail": "wrangler tail",
    "kv:create": "wrangler kv:namespace create TOKENS",
    "kv:create:preview": "wrangler kv:namespace create TOKENS --preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:client": "bun run scripts/test-client.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "streamable-http",
    "oauth2",
    "server",
    "google-calendar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@biomejs/biome": "^2.1.3",
    "@hono/node-server": "^1.13.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/node": "^24.2.0",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.8.12",
    "itty-router": "^5.0.17",
    "uuid": "^11.1.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/uuid": "^10.0.0",
    "bun-types": "latest",
    "typescript": "^5.9.2",
    "wrangler": "^3.94.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
